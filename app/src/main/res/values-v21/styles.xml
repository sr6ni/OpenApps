<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@android:style/Theme.Material">
        <item name="android:statusBarColor">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/styleActionBar</item>
        <item name="android:buttonStyle">@style/styleButton</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/styleWindowAnim</item>
        <item name="android:fontFamily">@raw/google_sans</item>
        <item name="android:windowBackground">@color/blackDefault</item>
        <item name="android:checkboxStyle">@style/styleCheckBox</item>
        <item name="android:dropDownListViewStyle">@style/styleDropDown</item>
        <item name="android:editTextStyle">@style/styleEditText</item>
        <item name="android:listViewStyle">@style/styleListView</item>
        <item name="android:dialogTheme">@style/styleDialog</item>
        <item name="android:colorEdgeEffect">?android:colorAccent</item>
        <item name="android:alertDialogTheme">@style/styleAlertDialog</item>
        <item name="android:colorControlHighlight">@color/blackFor</item>
        <item name="android:actionOverflowMenuStyle">@style/styleMenuPopUp</item>
        <item name="android:colorBackgroundFloating">@color/blackFor</item>
        <item name="android:dialogCornerRadius">10.0dip</item>
        <item name="android:itemTextAppearance">@style/styleMenuText</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
    <style name="styleActionBar" parent="@android:style/Widget.Material.ActionBar.Solid">
        <item name="android:background">@color/blackDefault</item>
        <item name="android:titleTextStyle">@style/styleTextActionBar</item>
        <item name="android:elevation">1.0dip</item>
    </style>
    <style name="styleTextActionBar" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">@color/whiteTwo</item>
    </style>
        <style name="styleButton" parent="@android:style/Widget.Material.Button">
            <item name="android:background">@drawable/button_ui</item>
            <item name="android:minWidth">88.0dip</item>
            <item name="android:minHeight">48.0dip</item>
            <item name="android:textAllCaps">false</item>
        </style>
    <style name="styleCheckBox" parent="@android:style/Widget.Material.CompoundButton.CheckBox">
        <item name="android:textColor">@color/whiteDefault</item>
        <item name="android:buttonTint">@color/colorAccent</item>
        <item name="android:colorControlNormal">@color/whiteDefault</item>
        <item name="android:colorControlActivated">@color/whiteDefault</item>
    </style>
    <style name="styleWindowAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/abc_popup_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/abc_popup_exit</item>
    </style>
    <style name="styleEditText" parent="@android:style/Widget.Material.EditText">
        <item name="android:background">@drawable/edittext_ui</item>
        <item name="android:textColorHighlight">@color/colorAccent</item>
        <item name="android:textSelectHandleLeft">@drawable/text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/text_select_handle_right</item>
        <item name="android:textSelectHandle">@drawable/text_select_handle</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
    </style>
    <style name="styleDropDown">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowBackground">@drawable/menu_ui</item>
        <item name="android:background">@color/blackFor</item>
        <item name="android:listSelector">@color/blackThree</item>
        <item name="android:fastScrollEnabled">false</item>
    </style>
    <style name="styleListView" parent="@android:style/Widget.Material.ListView">
        <item name="android:cacheColorHint">@color/colorAccent</item>
        <item name="android:fastScrollEnabled">false</item>
    </style>
    <style name="styleDialog" parent="@android:style/Theme.Material.Dialog">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowEnterAnimation">@anim/abc_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/abc_popup_exit</item>
        <item name="android:windowBackground">@drawable/dialog_ui</item>
        <item name="android:windowTitleStyle">@style/styleWindowTitle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/styleBarButton</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/styleBarButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/styleBarButton</item>
        <item name="android:colorEdgeEffect">@color/colorAccent</item>
        <item name="android:windowElevation">5.0dip</item>
    </style>
    <style name="styleWindowTitle" parent="@android:style/TextAppearance.Material.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/whiteDefault</item>
    </style>
    <style name="styleBorderButton" parent="@android:style/Widget.Material.Button.Borderless.Colored">
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="styleBarButton" parent="@style/styleBorderButton">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="styleAlertDialog" parent="@style/styleDialog">
        <item name="android:windowMinWidthMajor">60.0%</item>
        <item name="android:windowMinWidthMinor">90.0%</item>
    </style>
    <style name="styleMenuPopUp" parent="@android:style/Widget.Material.PopupMenu">
    <item name="android:backgroundDimAmount">0.5</item>
    <item name="android:windowEnterAnimation">@anim/abc_popup_enter</item>
    <item name="android:windowExitAnimation">@anim/abc_popup_exit</item>
    <item name="android:textColor">@color/whiteDefault</item>
    <item name="android:popupBackground">@drawable/background_popup</item>
    <item name="android:colorControlNormal">@color/whiteDefault</item>
    <item name="android:colorControlActivated">@color/whiteDefault</item>
    <item name="android:colorControlHighlight">?android:colorControlHighlight</item>
    <item name="android:popupElevation">5.0dip</item>
    </style>
    <style name="styleMenuText" parent="@android:style/TextAppearance.Widget.TextView.PopupMenu">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/whiteDefault</item>
    </style>
</resources>
